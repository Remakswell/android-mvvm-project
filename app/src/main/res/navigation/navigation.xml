<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.template.ui.selectDay.SelectDayFragment"
        android:label="Select day"
        tools:layout="@layout/fragment_select_day" >
        <action
            android:id="@+id/action_mainFragment_to_selectPhotoFragment"
            app:destination="@id/selectPhotoFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/selectPhotoFragment"
        android:name="com.example.template.ui.selectTime.SelectTimeFragment"
        android:label="Select time"
        tools:layout="@layout/fragment_select_time">
        <action
            android:id="@+id/action_selectPhotoFragment_to_showPhotoFragment"
            app:destination="@id/showPhotoFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <argument
            android:name="date"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/showPhotoFragment"
        android:name="com.example.template.ui.showPhoto.PhotoFragment"
        android:label=""
        tools:layout="@layout/fragment_show_photo">
        <argument
            android:name="photoUrl"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>